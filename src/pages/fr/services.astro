  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Consultoría en arquitectura y diseño",
    subTitle:
      "Es necesario superar esa aproximación que reduce la Arquitectura a mero producto. Frente a una perspectiva de producto etiquetado para la posteridad, una mayor sensibilidad hacia el proceso, un enfoque intransitivo al que se incorpora la propia praxis humana en el devenir del proceso creativo. EMA S.A.S. trabaja sus servicios de consultoría, diseños, coordinación e integración siguiendo los procesos de su metodología de proyectos BIM (Building Information Modeling) o Modelos de información de la construcción. Esta metodología es aplicable a cualquier tipo de proyecto de la industria de la construcción (puentes, carreteras, edificaciones, e infraestructura en general) y se utiliza para todo el ciclo de vida de un proyecto de construcción, desde la conceptualización, diseños, construcción, administración, mantenimiento e incluso hasta su demolición.información de la construcción. Esta metodología es aplicable a cualquier tipo de proyecto de la industria de la construcción (puentes, carreteras, edificaciones, e infraestructura en general) y se utiliza para todo el ciclo de vida de un proyecto de construcción, desde la conceptualización, diseños, construcción, administración, mantenimiento e incluso hasta su demolición.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Plans et tablette numérique avec des plans de construction.",
    imgTwo: personWorking,
    imgTwoAlt: "Personne travaillant au bureau",
  },
  {
    isRightSection: false,
    title: "Gestión Integrada de proyectos de obra civil o mobiliaria",
    subTitle:
      "La creciente demanda de este tipo de servicios propició la creación de un área que concentra todas las especialidades, orientando constantemente el ciclo de vida de un proyecto hacia los objetivos definidos por el cliente, entre los que destacan el coste, el plazo y la calidad.",
    img: beforeAfter,
    imgAlt: "Chantier de construction avant et après",
    btnExists: true,
    btnTitle: "En savoir plus",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Consultoría, ejecución y mantenimiento de obras civiles",
    subTitle:
      "Consultoría técnica en todos los ámbitos que comprende la definición y construcción de una obra en cualquiera de sus fases, agrupados en torno a las disciplinas troncales de la edificación: sistemas constructivos, sistemas portantes, sistemas energéticos.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Ouvriers du bâtiment orchestrant un projet",
    imgTwo: aerialView,
    imgTwoAlt: "Vue aérienne d'une construction gérée",
  },
  {
    isRightSection: false,
    title: "Servicio técnico",
    subTitle:
      "Obtén ayuda por teléfono, chat o correo electrónico, o programa una reparación de equipos tecnológicos afines con el confort en inmuebles y obras civiles; sean estos equipos de climatización, energía eléctrica y sistemas hidráulicos.",
    img: usingTools,
    imgAlt:
      "Homme en gilet orange et noir portant un casque blanc tenant un outil électrique jaune et noir",
